{
  "manifest_version": 3,
  "name": "Faceit Predictor",
  "version": "2.0",
  "description": "Win probability for Faceit CS2 matches. Github: https://github.com/BlackAlexYT/FaceitPredictor",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://fc.blalex.ru/*",
    "*://*.faceit.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.faceit.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "faceit-predictor@blalex.ru"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "default_title": "Faceit Predictor"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["*://*.faceit.com/*"]
    }
  ]
}